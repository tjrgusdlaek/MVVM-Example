<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.obbliapp.ui.viewModel.AddContentViewModel" />

        <variable
            name="activity"
            type="com.example.obbliapp.ui.addContent.AddContentActivity" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.addContent.AddContentActivity">
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|snap"
        app:toolbarId="@id/toolbar">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="parallax">
            <ImageView
                android:id="@+id/ivBackArrow"
                android:layout_width="35dp"
                android:layout_marginLeft="5dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_arrow_back_24" />
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.CollapsingToolbarLayout>

    <LinearLayout
        android:layout_below="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:hint="타이틀"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:hint="주소"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/etDistance"
            android:layout_width="match_parent"
            android:hint="거리"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/etNeedPersonNumber"
            android:layout_width="match_parent"
            android:hint="필요인원"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:onClick="@{activity::addContent}"
            android:layout_height="wrap_content"
            android:text="저장"/>

    </LinearLayout>
    </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>